<form class="space-y-6 max-w-lg mx-auto" action="https://formspree.io/f/yourformid" method="POST">
  <div>
    <label for="name" class="block mb-1 font-medium">Naam</label>
    <input type="text" id="name" name="name" required class="w-full border border-gray-300 rounded px-3 py-2" />
  </div>
  <div>
    <label for="email" class="block mb-1 font-medium">Email</label>
    <input type="email" id="email" name="email" required class="w-full border border-gray-300 rounded px-3 py-2" />
  </div>
  <div>
    <label for="message" class="block mb-1 font-medium">Bericht</label>
    <textarea id="message" name="message" rows="5" required class="w-full border border-gray-300 rounded px-3 py-2"></textarea>
  </div>
  <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 transition">Verzenden</button>
</form>
