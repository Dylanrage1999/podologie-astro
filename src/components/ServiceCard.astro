---
const { title, description, image } = Astro.props;
---

<div class="bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300 flex flex-col h-full">
  <div class="h-48 w-full overflow-hidden">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover transform transition-transform duration-500 hover:scale-105"
      loading="lazy"
    />
  </div>
  <div class="p-6 flex flex-col flex-1">
    <h3 class="text-xl font-semibold text-primary mb-3">{title}</h3>
    <p class="text-gray-600 flex-1">{description}</p>
  </div>
</div>
