<section
  id="hero"
  class="relative flex items-center justify-center text-white min-h-[80vh] sm:min-h-screen"
>
  <!-- Achtergrondafbeelding -->
  <div
    class="absolute inset-0 bg-cover bg-center bg-fixed"
    style="background-image: url('/images/placeholder.jpg');"
  ></div>

  <!-- Donkere overlay -->
  <div class="absolute inset-0 bg-primary bg-opacity-50"></div>

  <!-- Content -->
  <div class="relative z-10 max-w-4xl text-center px-4 sm:px-6 lg:px-8">
    <h1
      class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-tight mb-4 sm:mb-6 drop-shadow-lg"
    >
      Uw voeten, onze zorg
    </h1>
    <p
      class="text-lg sm:text-xl md:text-2xl mb-6 sm:mb-8 drop-shadow-md max-w-3xl mx-auto"
    >
      Professionele podologische zorg en therapie op maat, voor comfort en
      gezondheid.
    </p>
    <a
      href="/afspraken"
      class="inline-block bg-white text-primary font-semibold px-6 sm:px-8 py-3 rounded shadow hover:bg-primary-dark hover:text-white transition-colors duration-300"
    >
      Maak een afspraak
    </a>
  </div>
</section>
