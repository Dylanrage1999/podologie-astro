<section
  id="hero"
  class="relative h-screen flex items-center justify-center px-6 md:px-0 text-white z-0"
  style="
    background-image: url('/images/placeholder.jpg');
    background-size: cover;
    background-position: center;
  "
>
  <!-- Donkere overlay over achtergrond, -z-10 zorgt dat overlay achter header en tekst zit -->
  <div class="bg-primary bg-opacity-70 absolute inset-0 -z-10"></div>

  <div class="relative max-w-4xl text-center z-10 px-4">
    <h1 class="text-5xl md:text-7xl font-bold leading-tight mb-6">
      Uw voeten, onze zorg
    </h1>
    <p class="text-xl md:text-2xl mb-8">
      Professionele podologische zorg en therapie op maat, voor comfort en gezondheid.
    </p>
    <a
      href="/afspraken"
      class="inline-block bg-white text-primary font-semibold px-8 py-3 rounded shadow hover:bg-gray-100 transition"
      >Maak een afspraak</a
    >
  </div>
</section>

<style>
  @media (max-width: 768px) {
    section {
      background-attachment: scroll !important;
    }
  }
</style>