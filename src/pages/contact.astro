---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
  <section class="max-w-4xl mx-auto px-4 py-16">
    <h2 class="text-3xl font-semibold text-primary mb-6">Contacteer ons</h2>

    <div class="grid md:grid-cols-2 gap-8">
      <form class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700">Naam</label>
          <input type="text" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary" placeholder="Je naam" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">E-mail</label>
          <input type="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary" placeholder="je@email.com" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Bericht</label>
          <textarea rows="4" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary" placeholder="Typ je bericht hier..."></textarea>
        </div>
        <button type="submit" class="bg-primary text-white px-4 py-2 rounded hover:bg-primary-dark transition">
          Verzenden
        </button>
      </form>

      <div class="text-gray-700 space-y-4">
        <p><strong>Adres:</strong><br/>Examplelaan 123, 9000 Gent</p>
        <p><strong>Telefoon:</strong><br/><a href="tel:+32471234567" class="text-primary hover:underline">+32 471 23 45 67</a></p>
        <p><strong>E-mail:</strong><br/><a href="mailto:info@solesolutions.be" class="text-primary hover:underline">info@solesolutions.be</a></p>
        <img src="/images/podoloog-aan-werk.jpg" alt="Podoloog aan het werk" class="rounded-lg shadow-md w-full max-h-72 object-cover" />
      </div>
    </div>
  </section>
</Layout>