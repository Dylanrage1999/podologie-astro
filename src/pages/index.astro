---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import CtaSection from '../components/CtaSection.astro';

const diensten = [
  {
    title: "Biomechanisch onderzoek",
    description: "Grondige analyse van voetstructuur, looppatroon en klachten.",
    image: "/images/biomechanisch.jpg"
  },
  {
    title: "Ganganalyse",
    description: "Analyse van je looppatroon voor betere diagnose en behandeling.",
    image: "/images/ganganalyse.jpg"
  },
  {
    title: "Podologische zolen",
    description: "Op maat gemaakte zolen voor optimale ondersteuning.",
    image: "/images/zolen.jpg"
  },
  {
    title: "Schoenadvies",
    description: "Advies voor de juiste schoenen afgestemd op jouw voeten.",
    image: "/images/schoenadvies.jpg"
  },
  {
    title: "Zolen voor veiligheidsschoenen",
    description: "Specifieke zolen die comfort bieden in veiligheidsschoenen.",
    image: "/images/veiligheidsschoenen.jpg"
  }
];

const features = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
    </svg>`,
    title: "Professionele zorg",
    description: "Behandeling door een erkend en ervaren podoloog."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`,
    title: "Persoonlijk advies",
    description: "Op maat gemaakte oplossingen voor jouw situatie."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7l6 6-6 6M21 7l-6 6 6 6" />
    </svg>`,
    title: "Moderne technieken",
    description: "Gebruik van geavanceerde apparatuur en methoden."
  }
];
---

<Layout title="Welkom bij Podologie Sole Solutions">
  <Hero />

  <!-- Waarom kiezen voor ons -->
  <section class="bg-gray-50 py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-semibold text-center text-primary mb-12">Waarom kiezen voor ons?</h2>
        <p class="mt-4 text-gray-600 max-w-2xl mx-auto">
          Wij bieden professionele en persoonlijke zorg met moderne technieken voor de beste resultaten.
        </p>
      </div>

      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {features.map((feature) => (
          <div class="bg-white rounded-2xl shadow-lg p-6 flex flex-col items-center text-center transition-transform duration-300 hover:scale-105">
            <div class="mb-4" set:html={feature.icon}></div>
            <h3 class="text-lg font-semibold text-gray-800">{feature.title}</h3>
            <p class="mt-2 text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Diensten -->
  <section class="max-w-6xl mx-auto px-4 py-20">
    <h2 class="text-3xl font-semibold text-center text-primary mb-12">Onze Diensten</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
      {diensten.map((dienst) => (
        <div class="max-w-md mx-auto">
          <ServiceCard title={dienst.title} description={dienst.description} image={dienst.image} />
        </div>
      ))}
    </div>
  </section>

  <CtaSection />
</Layout>
