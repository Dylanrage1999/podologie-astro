---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import CtaSection from '../components/CtaSection.astro';

const diensten = [
  {
    title: "Podologisch onderzoek",
    description: "Grondige analyse van voetstructuur, looppatroon en klachten.",
    image: "/images/voetonderzoek.jpg"
  },
  {
    title: "Therapeutische zolen",
    description: "Op maat gemaakte zolen die ondersteuning bieden en pijnklachten verminderen.",
    image: "/images/zolen.jpg"
  },
  {
    title: "Sportpodologie",
    description: "Preventie en behandeling van sportgerelateerde voet- en houdingsproblemen.",
    image: "/images/sport.jpg"
  }
];
---

<Layout title="Welkom bij Podologie Sole Solutions">
  <Hero />

  <section class="max-w-6xl mx-auto px-4 py-20">
    <h2 class="text-3xl font-semibold text-center text-primary mb-12">Onze Diensten</h2>
    <div class="grid gap-8 md:grid-cols-3">
      {diensten.map((dienst) => (
        <ServiceCard title={dienst.title} description={dienst.description} image={dienst.image} />
      ))}
    </div>
  </section>

  <CtaSection />
</Layout>